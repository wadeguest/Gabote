<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="winning_matchup">
        <item name="android:textColor">@android:color/holo_green_light</item>
        <item name="android:textSize">@android:dimen/dialog_min_width_major</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="losing_matchup">
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textSize">@android:dimen/dialog_min_width_major</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <string-array name="dhSpinner">
        <item>Live Draft</item>
        <item>Static Draft</item>
    </string-array>
    <string-array name="dpSpinner">
        <item>1</item>
        <item>2</item>
        <item>3</item>
        <item>4</item>
        <item>5</item>
        <item>6</item>
        <item>7</item>
        <item>8</item>
        <item>9</item>
        <item>10</item>
        <item>11</item>
        <item>12</item>
    </string-array>
</resources>
