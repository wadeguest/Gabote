<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/teamHeader">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Notifications"
            android:src="@mipmap/ic_notification"
            android:id="@+id/bNotifications"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="User Team Name"
            android:id="@+id/userTeamName"
            android:gravity="center"
            android:layout_alignBottom="@+id/bNotifications"
            android:layout_toRightOf="@+id/bNotifications"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/bEdit"
            android:layout_toStartOf="@+id/bEdit" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Edit"
            android:id="@+id/bEdit"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Player"
        android:id="@+id/bAddPlayer"
        android:layout_below="@+id/teamHeader"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teamPlayerTable"
        android:background="@drawable/table_borders"
        android:layout_below="@+id/teamHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp"
        android:stretchColumns="1,2"
        android:divider="@drawable/table_borders"
        android:showDividers="middle">

   <!--     <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/display_row">
        </TableRow>
-->

    </TableLayout>
</RelativeLayout>