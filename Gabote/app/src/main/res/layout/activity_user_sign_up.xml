<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.wade.gabote.UserSignUp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sign Up"
        android:textSize="50dp"
        android:id="@+id/tSignUp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Username:"
    android:id="@+id/newUsername"
        android:layout_below="@+id/tSignUp"
        android:layout_toLeftOf="@+id/et_username"
        android:layout_toStartOf="@+id/et_username"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email:"
        android:id="@+id/newEmail"
        android:layout_alignLeft="@+id/newUsername"
        android:layout_alignStart="@+id/newUsername"
        android:layout_below="@+id/newUsername"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password:"
        android:id="@+id/newPassword"
        android:layout_below="@+id/et_useremail"
        android:layout_toLeftOf="@+id/et_useremail"
        android:layout_toStartOf="@+id/et_useremail"
        android:layout_marginTop="25dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_username"
        android:layout_alignBaseline="@+id/newUsername"
        android:layout_alignBottom="@+id/newUsername"
        android:layout_alignLeft="@+id/tSignUp"
        android:layout_alignStart="@+id/tSignUp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_userpass"
        android:layout_alignBaseline="@+id/newPassword"
        android:layout_alignBottom="@+id/newPassword"
        android:layout_toRightOf="@+id/newPassword"
        android:layout_toEndOf="@+id/newPassword" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_useremail"
        android:layout_alignBaseline="@+id/newEmail"
        android:layout_alignBottom="@+id/newEmail"
        android:layout_toRightOf="@+id/newUsername"
        android:layout_toEndOf="@+id/newUsername" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp" />
</RelativeLayout>