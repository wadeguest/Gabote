<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wade.gabote" >

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GameScores"
            android:label="@string/game_scores" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FantasyMenu"
            android:label="@string/fantasy_menu" >
        </activity>
        <activity
            android:name=".FantasyMatchup"
            android:label="@string/fantasy_matchup" >
        </activity>
        <activity
            android:name=".userFantasyTeam"
            android:label="@string/title_activity_user_fantasy_team" >
        </activity>
        <activity android:name=".UserLogin" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScoringSettings"
            android:label="@string/title_activity_scoring_settings">
        </activity>
    </application>

</manifest>
